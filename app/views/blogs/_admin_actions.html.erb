<% if logged_in?(:site_admin)%>
  <nav class="breadcrumb blogcrumb">
    <%= link_to fa_icon('file-text'), toggle_status_blog_path(blog), class: 'pull-right', style: blog_status_color(blog), :title => blog_status_title(blog) %>
    <%= link_to fa_icon('pencil-square-o'), edit_blog_path(blog), class: 'pull-right' %>
    <%= link_to fa_icon('trash'), blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'pull-right' %>
  </nav>
<% end %>